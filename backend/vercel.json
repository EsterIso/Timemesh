{
    "builds": [
        {
            "src": "calendar_app/wsgi.py",
            "use": "@vercel/python",
            "config": { 
                "maxLambdaSize": "15mb", 
                "runtime": "python3.12"
            }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/admin/static/(.*)",
            "dest": "/static/admin/$1"
        },
        {
            "src": "/(.*)",
            "dest": "calendar_app/wsgi.py"
        }
    ],
    "env": {
        "PYTHONPATH": ".:$PYTHONPATH",
        "DJANGO_SETTINGS_MODULE": "calendar_app.settings"
    }
}